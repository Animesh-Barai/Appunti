<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.cardview.CircularRevealCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appunti_detail_attachment_thumbnail_size"
        android:foreground="@drawable/material_background_ripple"
        app:cardCornerRadius="@dimen/material_cardview_cornerRadius"
        app:contentPadding="0dp"
        app:cardElevation="@dimen/appunti_entry_attachment_card_elevation"
        app:cardMaxElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:scaleType="centerCrop"
                android:id="@+id/remoteUrlImage"
                android:visibility="visible"
                android:layout_width="@dimen/appunti_detail_attachment_thumbnail_size"
                android:layout_height="@dimen/appunti_detail_attachment_thumbnail_size"
                android:background="@color/material_grey_300"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:text="Title"
                android:textAppearance="?attr/textAppearanceListItem"
                android:id="@+id/remoteUrlTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/remoteUrlImage"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                app:fontFamily="@font/nunito_semibold"
                android:textSize="14sp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:text="Title"
                android:textAppearance="?attr/textAppearanceListItem"
                android:id="@+id/remoteUrlDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/remoteUrlImage"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                app:fontFamily="@font/nunito_extralight"
                android:textSize="12sp" app:layout_constraintTop_toBottomOf="@+id/remoteUrlTitle"
                android:layout_marginTop="4dp" app:layout_constraintEnd_toStartOf="@+id/remoteUrlRemoveButton"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/remoteUrlRemoveButton"
                android:tooltipText="@string/delete"
                android:contentDescription="@string/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/appunti_sharp_delete_24_outline_selector"
                android:background="@drawable/material_background_ripple"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:targetApi="o"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.circularreveal.cardview.CircularRevealCardView>