<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.circularreveal.cardview.CircularRevealCardView android:id="@+id/id_card"
    style="@style/Widget.MaterialComponents.CardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="@dimen/appunti_main_item_list_margins_horizontal"
    android:layout_marginRight="@dimen/appunti_main_item_list_margins_horizontal"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true"
    android:foreground="@drawable/appunti_card_selectable_item_background_with_stroke"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/material_cardview_cornerRadius"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:strokeColor="?attr/colorControlNormal"
    app:strokeWidth="0.4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/text_size_headline_material"
            android:transitionName="itemTitle"
            android:drawablePadding="8dp"
            app:fontFamily="?attr/fontFamily" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="?attr/textAppearanceListItemSmall"
            android:textSize="@dimen/text_size_subhead_material"
            android:transitionName="itemText" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/entryCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/category_chip_background_no_ripple"
            android:clickable="false"
            android:padding="8dp"
            android:textAppearance="?attr/textAppearanceListItemSmall"
            android:textSize="@dimen/text_size_caption_material"
            android:transitionName="itemCategory" />


    </LinearLayout>
</com.google.android.material.circularreveal.cardview.CircularRevealCardView>
