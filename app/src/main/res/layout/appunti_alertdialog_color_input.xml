<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:padding="16dp">

    <it.sephiroth.android.app.appunti.widget.GridLayoutColorChooser
        android:id="@+id/colorChooser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        app:appunti_colorButtonSize="@dimen/appunti_color_button_large"
        app:appunti_color_padding="@dimen/appunti_color_button_large_margin"
        app:appunti_colors="?attr/categoryColors"
        app:appunti_selectedColorIndex="0" />


</FrameLayout>