<resources>

    <style name="Theme.Appunti.BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.Appunti.NavigationItem" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/listPreferredItemHeightSmall</item>
        <item name="android:background">@drawable/navigation_item_selectable_background</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">?android:attr/listPreferredItemPaddingEnd</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
    </style>

    <style name="Theme.Appunti.TextAppearance" parent="" />

    <style name="Theme.Appunti.TextAppearance.NewNote" parent="@android:style/TextAppearance.Material.Small">
        <item name="fontFamily">?attr/fontFamilyBold</item>
        <item name="android:fontFamily">?attr/fontFamilyBold</item>
        <item name="android:textSize">@dimen/text_size_small_material</item>
        <!--<item name="android:textColor">?attr/colorControlNormal</item>-->
        <!--<item name="android:textSize">@dimen/text_size_caption_material</item>-->
    </style>


</resources>
