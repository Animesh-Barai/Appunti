<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Appunti.Dark.Base"
           parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="colorAccentDisabled">@color/colorAccentDisabled</item>
        <item name="colorControlActivated">@color/material_grey_100</item>

        <item name="android:textColorLink">?android:textColorPrimary</item>
        <item name="android:textColorLinkInverse">?android:textColorPrimaryInverse</item>

        <item name="android:windowBackground">@color/background_material_dark</item>
        <item name="android:navigationBarColor">@color/background_material_dark</item>
        <item name="android:colorForegroundInverse">@color/background_material_light</item>
        <item name="android:windowLightNavigationBar"
              tools:ignore="NewApi">false
        </item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar"
              tools:ignore="NewApi">false
        </item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="search_theme">dark</item>
        <item name="categoryColors">@array/category_colors_dark</item>

        <item name="bottomSheetDialogTheme">@style/Theme.Appunti.BottomSheetDialog</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/material_grey_850</item>
        <item name="actionModeStyle">@style/Widget.Appunti.ActionMode.Dark</item>

        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>

        <!-- custom attributes -->
        <item name="fabBackgroundColorClosed">@color/material_grey_800</item>
        <item name="fabBackgroundColorOpened">@color/material_grey_800</item>

        <item name="alertDialogTheme">@style/Theme.Appunti.Default.AlertDialogTheme</item>
    </style>

    <style name="Theme.Appunti.Dark.Base.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Appunti.Dark.Base.NoActionbar.FullScreen">
        <item name="android:fitsSystemWindows">@bool/fullscreen_style_fit_system_windows</item>
        <item name="navigationbarBackgroundDrawable">@drawable/appunti_navigationbar_background_dark</item>
        <item name="statusbarBackgroundDrawable">@drawable/appunti_statusbar_background_light</item>
    </style>

    <style name="Theme.Appunti.Dark"
           parent="Theme.Appunti.Dark.Base"/>

    <style name="Theme.Appunti.Dark.NoActionbar"
           parent="Theme.Appunti.Dark.Base.NoActionbar"/>

    <!-- ActionMode -->
    <style name="Widget.Appunti.ActionMode.Dark">
        <item name="background">@color/material_grey_850</item>
        <item name="backgroundSplit">@color/material_grey_850</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="titleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionMode.Title</item>
        <item name="subtitleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle</item>
        <item name="android:elevation">6dp</item>
    </style>

</resources>
