<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- light theme base -->
    <style name="Theme.Appunti.DayNight.Base" parent="Theme.MaterialComponents.DayNight">
        <!-- day/night theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorAccentDisabled">@color/colorAccentDisabled</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="android:textColorLink">?android:textColorPrimary</item>
        <item name="android:textColorLinkInverse">?android:textColorPrimaryInverse</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">@bool/windowLightNavigationBar</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">@bool/windowLightStatusBar</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/background_material_light</item>
        <item name="android:navigationBarColor">@color/background_material_light</item>
        <item name="android:colorForegroundInverse">@color/background_material_dark</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="search_theme">@integer/search_theme</item>
        <item name="categoryColors">@array/category_colors</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Appunti.BottomSheetDialog</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/actionModeBackground</item>
        <item name="actionModeStyle">@style/Widget.Appunti.ActionMode</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="fabBackgroundColorClosed">@color/fabBackgroundColorClosed</item>
        <item name="fabBackgroundColorOpened">@color/fabBackgroundColorOpened</item>
        <item name="alertDialogTheme">@style/Theme.Appunti.Default.AlertDialogTheme</item>
    </style>

    <style name="Theme.Appunti.DayNight.Base.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Appunti.DayNight.Base.NoActionbar.FullScreen">
        <item name="android:fitsSystemWindows">@bool/fullscreen_style_fit_system_windows</item>
        <item name="navigationbarBackgroundDrawable">@drawable/appunti_navigationbar_background</item>
        <item name="statusbarBackgroundDrawable">@drawable/appunti_statusbar_background</item>
    </style>

    <!--
        light theme implementations
    -->
    <style name="Theme.Appunti.Light" parent="Theme.Appunti.DayNight.Base"/>
    <style name="Theme.Appunti.Light.NoActionbar" parent="Theme.Appunti.DayNight.Base.NoActionbar"/>
    <style name="Theme.Appunti.Light.NoActionbar.FullScreen" parent="Theme.Appunti.DayNight.Base.NoActionbar.FullScreen" />


    <!-- default theme -->
    <style name="Theme.Appunti.Default.NoActionbar" parent="Theme.Appunti.Light.NoActionbar"/>


    <style name="Theme.Appunti.AppBarOverlay"
           parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.Appunti.PopupOverlay"
           parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="Theme.Appunti.Default.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.DayNight.ActionBar"/>

    <style name="Theme.Appunti.Default.PopupOverlay"
           parent="ThemeOverlay.AppCompat.DayNight"/>

    <style name="Theme.Appunti.MediaPlayer" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@color/background_material_dark</item>
        <item name="android:colorForegroundInverse">@color/background_material_dark</item>

        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textColorPrimary">?android:textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">?android:textColorSecondaryInverse</item>
        <item name="android:textColorTertiary">?android:textColorTertiaryInverse</item>

<!--        <item name="colorControlNormal">@color/background_material_light</item>-->
        <item name="colorControlHighlight">@color/background_material_light</item>

<!--        <item name="android:disabledAlpha">0.1</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorAccentDisabled">@color/colorAccentDisabled</item>

        <item name="android:progressTint">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

</resources>
