<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- main themes-->

    <style name="Theme.Appunti.Light.Base" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:windowBackground">@android:color/white</item>
        <!--<item name="android:navigationBarColor">?android:attr/windowBackground</item>-->
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <!-- options are: explode, slide, fade -->
        <!--<item name="android:windowEnterTransition">@android:transition/slide_bottom</item>-->
        <!--<item name="android:windowExitTransition">@android:transition/slide_bottom</item>-->

        <!-- specify shared element transitions -->
        <!--<item name="android:windowSharedElementEnterTransition">@android:transition/slide_left</item>-->
        <!--<item name="android:windowSharedElementExitTransition">@android:transition/slide_left</item>-->

        <!-- fonts -->
        <!--<item name="android:fontFamily">@font/assistant_extralight</item>-->
        <!--<item name="fontFamily">@font/product_sans_regular</item>-->
        <!--<item name="fontFamilyLight">@font/poppins_light</item>-->
        <!--<item name="fontFamilyThin">@font/product_sans_regular</item>-->
        <!--<item name="fontFamilyBold">@font/product_sans_regular</item>-->

        <!-- default colors -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="search_theme">play</item>
        <item name="categoryColors">@array/category_colors_light</item>

        <item name="bottomSheetDialogTheme">@style/Theme.Appunti.BottomSheetDialog</item>
        <item name="alertDialogTheme">@style/Theme.MaterialComponents.Light.Dialog.MinWidth</item>
    </style>

    <style name="Theme.Appunti.Light.Base.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Appunti.Dark.Base" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:windowBackground">@android:color/black</item>
        <!--<item name="android:navigationBarColor">?android:attr/windowBackground</item>-->
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="search_theme">dark</item>
        <item name="categoryColors">@array/category_colors_dark</item>

        <item name="bottomSheetDialogTheme">@style/Theme.Appunti.BottomSheetDialog</item>
        <item name="alertDialogTheme">@style/Theme.MaterialComponents.Dialog.MinWidth</item>
        <!--<item name="android:windowReturnTransition">@android:transition/fade</item>-->
    </style>

    <style name="Theme.Appunti.Dark.Base.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.Appunti.Light" parent="Theme.Appunti.Light.Base" />

    <style name="Theme.Appunti.Dark" parent="Theme.Appunti.Dark.Base" />

    <style name="Theme.Appunti.DayNight" parent="Theme.Appunti.Default" />

    <style name="Theme.Appunti.Light.NoActionbar" parent="Theme.Appunti.Light.Base.NoActionbar" />

    <style name="Theme.Appunti.Dark.NoActionbar" parent="Theme.Appunti.Dark.Base.NoActionbar" />

    <style name="Theme.Appunti.DayNight.NoActionbar" parent="Theme.Appunti.Default.NoActionbar" />


    <!-- default theme -->
    <style name="Theme.Appunti.Default" parent="Theme.Appunti.Light" />

    <style name="Theme.Appunti.Default.NoActionbar" parent="Theme.Appunti.Light.NoActionbar" />


    <style name="Theme.Appunti.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.Appunti.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Theme.Appunti.Default.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Appunti.Default.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TextAppearance -->

</resources>
