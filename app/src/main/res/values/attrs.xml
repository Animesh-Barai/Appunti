<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- reference to the colors array for the note category -->
    <attr name="categoryColors"
          format="reference"/>

    <attr name="navigationbarBackgroundDrawable" format="reference"/>
    <attr name="statusbarBackgroundDrawable" format="reference"/>
    <attr name="colorAccentDisabled" format="color"/>

    <attr name="fabBackgroundColorClosed" format="color"/>
    <attr name="fabBackgroundColorOpened" format="color"/>

    <!--<attr name="fontFamilyThin" format="reference" />-->
    <!--<attr name="fontFamilyLight" format="reference" />-->
    <!--<attr name="fontFamilyBook" format="reference" />-->
    <!--<attr name="fontFamilyBold" format="reference" />-->


    <declare-styleable name="HorizontalColorChooser">
        <attr name="appunti_colors"
              format="reference"/>
        <attr name="appunti_selectedColorIndex"
              format="integer"/>
        <attr name="appunti_color_padding_left"
              format="dimension"/>
        <attr name="appunti_color_padding_right"
              format="dimension"/>
    </declare-styleable>

    <declare-styleable name="GridLayoutColorChooser">
        <attr name="appunti_colors"/>
        <attr name="appunti_selectedColorIndex"/>
        <attr name="appunti_color_padding"
              format="dimension"/>
        <attr name="appunti_colorButtonSize"
              format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CheckableAppcompatImageButton">
        <attr name="appunti_toggle_enabled"
              format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MaterialShapeDrawable">
        <attr name="type"
              format="enum">
            <enum name="all"
                  value="0"/>
            <enum name="start"
                  value="1"/>
            <enum name="end"
                  value="2"/>
        </attr>

        <attr name="android:width"/>
        <attr name="android:height"/>
        <attr name="android:dither"/>
        <attr name="android:tint"/>
        <attr name="android:tintMode"/>
    </declare-styleable>

    <declare-styleable name="MaterialShapeSolid">
        <attr name="android:color"/>
    </declare-styleable>

    <declare-styleable name="CollapsingLinearLayout">
        <attr name="android:content"/>
    </declare-styleable>

    <declare-styleable name="TextViewChip">
        <attr name="android:minWidth"></attr>
        <attr name="android:paddingTop"></attr>
        <attr name="android:paddingBottom"></attr>
        <attr name="android:paddingLeft"></attr>
        <attr name="android:paddingRight"></attr>
        <attr name="android:drawablePadding"></attr>
        <attr name="android:textAppearance"></attr>
        <attr name="android:textSize"></attr>
        <attr name="android:gravity"></attr>
        <attr name="fontFamily"></attr>
        <attr name="android:fontFamily"></attr>
        <attr name="android:lines"></attr>
        <attr name="android:ellipsize"></attr>
        <attr name="android:clickable"/>
    </declare-styleable>

</resources>